env:
  es6: true
  node: true
extends:
  - airbnb-base
parserOptions:
  sourceType: script
  impliedStrict: false
rules:
  no-underscore-dangle: [off]
  func-names: [error, "as-needed"]
  react/require-extension: [off]  # strange deprecation error
  no-restricted-syntax: [off]
  no-mixed-operators: [off]
  strict: [error, "global"]
  prefer-spread: [off]
  no-param-reassign: [off]
  no-restricted-properties: [off]
  no-plusplus: [off]
  class-methods-use-this: [off]
